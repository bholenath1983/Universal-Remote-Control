    <script>
        // Theme Toggle
        const themeToggle = document.getElementById('theme-toggle');
        const body = document.body;
        
        // Check for saved theme preference
        if (localStorage.getItem('theme') === 'dark') {
            body.setAttribute('data-theme', 'dark');
            themeToggle.checked = true;
        }
        
        themeToggle.addEventListener('change', () => {
            if (themeToggle.checked) {
                body.setAttribute('data-theme', 'dark');
                localStorage.setItem('theme', 'dark');
            } else {
                body.removeAttribute('data-theme');
                localStorage.setItem('theme', 'light');
            }
        });
        
        // Appliance Selection
        const applianceCards = document.querySelectorAll('.appliance-card');
        const remoteContainer = document.getElementById('remote-control');
        const closeRemote = document.querySelector('.close-remote');
        
        applianceCards.forEach(card => {
            card.addEventListener('click', () => {
                const appliance = card.getAttribute('data-appliance');
                const remoteTitle = remoteContainer.querySelector('.remote-title');
                
                // Update remote title based on appliance
                switch(appliance) {
                    case 'tv':
                        remoteTitle.textContent = 'TV Remote Control';
                        break;
                    case 'ac':
                        remoteTitle.textContent = 'Air Conditioner Remote';
                        break;
                    case 'fan':
                        remoteTitle.textContent = 'Electric Fan Remote';
                        break;
                    case 'stb':
                        remoteTitle.textContent = 'Set Top Box Remote';
                        break;
                    case 'projector':
                        remoteTitle.textContent = 'Projector Remote';
                        break;
                    default:
                        remoteTitle.textContent = 'Remote Control';
                }
                
                // Show remote control
                remoteContainer.classList.add('active');
            });
        });
        
        // Close remote
        closeRemote.addEventListener('click', () => {
            remoteContainer.classList.remove('active');
        });
        
        // Remote button functionality
        const remoteButtons = document.querySelectorAll('.remote-btn');
        remoteButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Add visual feedback
                this.style.backgroundColor = '#3498db';
                setTimeout(() => {
                    this.style.backgroundColor = '';
                }, 200);
                
                // Simulate vibration if supported
                if (navigator.vibrate) {
                    navigator.vibrate(50);
                }
                
                console.log('Button pressed:', this.textContent.trim());
                // In a real app, this would send IR/WiFi commands
            });
        });
        
        // Simulate WebSocket connection for WiFi control
        function initWebSocket() {
            console.log("Initializing WebSocket connection...");
            // In a real app: const socket = new WebSocket('wss://your-server.com/remote');
            
            // Simulate connection
            setTimeout(() => {
                console.log("WebSocket connection established for WiFi control");
            }, 1000);
        }
        
        // Initialize the app
        document.addEventListener('DOMContentLoaded', () => {
            initWebSocket();
            
            // Load IR code database
            fetch('remote-api.json')
                .then(response => response.json())
                .then(data => console.log("IR Code Database Loaded:", data))
                .catch(error => console.error("Error loading IR codes:", error));
        });
        
        // Register Service Worker
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('service-worker.js')
                    .then(registration => {
                        console.log('Service Worker registered:', registration);
                    })
                    .catch(error => {
                        console.log('Service Worker registration failed:', error);
                    });
            });
        }
    </script>
